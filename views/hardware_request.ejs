<!doctype html>
<html>
  <head>
    <title>Hardware Request</title>
  </head>
  <body>
    <%- include header.ejs %>
		<div class="container">
			<div class="main-card">
				<div class="form-group row">
					<label for="serialNum" class="col-sm-2 col-form-label">Serial Number</label>
					<div class="col-sm-10">
						<input type="firstName" class="form-control" id="serialNum" placeholder="Serial Number" required>
					</div>
				</div>
				<div class="form-group row">
					<label for="start" class="col-sm-2 col-form-label">Checkout Date</label>
					<div class="col-sm-10">
						<input type="start" class="form-control" id="start" placeholder="YYYY-MM-DD HH:MM:SS" required>
					</div>
				</div>
				<div class="form-group row">
					<label for="end" class="col-sm-2 col-form-label">Return Date</label>
					<div class="col-sm-10">
						<input type="end" class="form-control" id="end" placeholder="YYYY-MM-DD HH:MM:SS" required>
					</div>
				</div>
				<button class="btn btn-primary" type="button" id="login-btn">
					Request
				</button>
			</div>
		</div>
  </body>
</html>

<!doctype html>
<html>
  <head>
    <title>Lesson Plans</title>
    <link rel="stylesheet" type="text/css" href="/css/common.css" />
  </head>
  <body>
    <%- include header.ejs %>
		<div class="container">
			<div id = "alert_placeholder"></div>
			<div id="interaction_bar">
				<input type="text" id="searchField" onkeyup="filterCurriculums()" placeholder="Search for names...">
				<% if(priv == 'Admin'){ %>
					<button type="button" class="btn btn-success add-new add-curriculum">Add New Curriculum</button>
				<% } %>
			</div>
		</div>
		<% for(var i=0; i<data.length; i++) { %>
			<div class="w3-card-4 edit-curriculum-card" data-id="<%= data[i].id %>">
				<% if(!data[i].picture){ %>
					<div class="card-image opt-image" style="background-color:<%= data[i].generated_color %>">
					</div>
				<% } else { %>
					<div class="card-image opt-image">
						<img src=<%= data[i].picture %> />
					</div>
				<% } %>
				<div class="w3-container w3-left">
					<h3><%= data[i].name %></h3>
				</div>
				<% if(priv == 'Admin'){ %>
					<div class="decision-buttons">
						<button class="btn btn-danger remove-btn" type="button" data-id="<%= data[i].id %>">
							Remove
						</button>
					</div>
				<% } %>
			</div>
		<% } %>
		
		<%- include modals/curriculum_edit_modal.ejs %>
		
		<%- include modals/curriculum_add_modal.ejs %>
		
		<script src="js/curriculum.js"></script>
  </body>
</html>

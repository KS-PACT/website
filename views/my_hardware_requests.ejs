<!doctype html>
<html>
	<head>
		<%- include head.ejs %>
		<title>My Hardware Requests</title>
	</head>
	<body>
		<%- include header.ejs %>
		<div class="container">
			<div id = "alert_placeholder"></div>
		</div>
		<div class="content">
			<% for(var i=0; i<data.length; i++) { %>
				<div class="w3-card-4 my-hardware-request-card"  data-id="<%= data[i].id %>">
					<% if(!data[i].picture){ %>
						<div class="card-image opt-image" style="background-color:<%= data[i].color %>">
						</div>
					<% } else { %>
						<div class="card-image opt-image">
							<img src=<%= data[i].picture %> />
						</div>
					<% } %>
					<div class="w3-container w3-left">
						<h3><%= data[i].name %></h3>
						<p><%= data[i].serial_num %></p>
						<div class="decision-buttons">
							<button type="button" class="btn btn-danger cancel-btn" data-id="<%= data[i].id %>">Cancel</button>
						</div>
					</div>
				</div>
			<% } %>
		</div>

		<%- include modals/my_hardware_requests_modal.ejs %>

		<script src="js/my_hardware_requests.js"></script>
	</body>
</html>
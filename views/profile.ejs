<!doctype html>
<html>
	<body>
    <%- include header.ejs %>
		<div class="container">
			<div class="main-card">
				<form>
					<div class="form-group row">
						<label for="inputFirstName" class="col-sm-2 col-form-label">First Name</label>
						<div class="col-sm-10">
							<input type="text" class="form-control" id="inputFirstName" name="givenName" value="<%= data[0].first_name %>" disabled>
						</div>
					</div>
					<div class="form-group row">
						<label for="inputLastName" class="col-sm-2 col-form-label">Last Name</label>
						<div class="col-sm-10">
							<input type="text" class="form-control" id="inputLastName" name="givenName" value="<%= data[0].last_name %>" disabled>
						</div>
					</div>
					<div class="form-group row">
						<label for="inputEmail" class="col-sm-2 col-form-label">Email</label>
						<div class="col-sm-10">
							<input type="text" class="form-control" id="inputEmail" name="givenName" value="<%= data[0].email %>" disabled>
						</div>
					</div>
					<div class="form-group row">
						<label for="inputUsername" class="col-sm-2 col-form-label">Username</label>
						<div class="col-sm-10">
							<input type="text" class="form-control" id="inputUsername" name="givenName" value="<%= data[0].username %>" disabled>
						</div>
					</div>
					<div class="form-group row">
						<label for="inputSchool" class="col-sm-2 col-form-label">School</label>
						<div class="col-sm-10">
							<input type="text" class="form-control" id="inputSchool" name="givenName" value="<%= data[0].school %>" disabled>
						</div>
					</div>
					<div class="form-group row">
						<label for="inputBio" class="col-sm-2 col-form-label">Bio</label>
						<div class="col-sm-10">
							<textarea class="span6" rows="3" id="inputBio" required disabled><%= data[0].bio %></textarea>
						</div>
					</div>
					<div class="form-group row">
						<label for="inputGrade" class="col-sm-2 col-form-label">Grade</label>
						<div class="col-sm-10">
							<select class="custom-select" id="inputGrade" disabled>
								<% if(data[0].grade_level == '{Not Specified}') { %>
									<option value='Not Specified' selected>Not Specified</option>
								<% } else { %>
									<option value='Not Specified'>Not Specified</option>
								<% } %>
								<% if(data[0].grade_level == '{K}') { %>
									<option value='K' selected>Kindergarten</option>
								<% } else { %>
									<option value='K'>Kindergarten</option>
								<% } %>
								<% if(data[0].grade_level == '{1st}') { %>
									<option value='1st' selected>1st</option>
								<% } else { %>
									<option value='1st'>1st</option>
								<% } %>
								<% if(data[0].grade_level == '{2nd}') { %>
									<option value='2nd' selected>2nd</option>
								<% } else { %>
									<option value='2nd'>2nd</option>
								<% } %>
								<% if(data[0].grade_level == '{3rd}') { %>
									<option value='3rd' selected>3rd</option>
								<% } else { %>
									<option value='3rd'>3rd</option>
								<% } %>
								<% if(data[0].grade_level == '{4th}') { %>
									<option value='4th' selected>4th</option>
								<% } else { %>
									<option value='4th'>4th</option>
								<% } %>
								<% if(data[0].grade_level == '{5th}') { %>
									<option value='5th' selected>5th</option>
								<% } else { %>
									<option value='5th'>5th</option>
								<% } %>
								<% if(data[0].grade_level == '{6th}') { %>
									<option value='6th' selected>6th</option>
								<% } else { %>
									<option value='6th'>6th</option>
								<% } %>
								<% if(data[0].grade_level == '{7th}') { %>
									<option value='7th' selected>7th</option>
								<% } else { %>
									<option value='7th'>7th</option>
								<% } %>
								<% if(data[0].grade_level == '{8th}') { %>
									<option value='8th' selected>8th</option>
								<% } else { %>
									<option value='8th'>8th</option>
								<% } %>
								<% if(data[0].grade_level == '{9th}') { %>
									<option value='9th' selected>9th</option>
								<% } else { %>
									<option value='9th'>9th</option>
								<% } %>
								<% if(data[0].grade_level == '{10th}') { %>
									<option value='10th' selected>10th</option>
								<% } else { %>
									<option value='10th'>10th</option>
								<% } %>
								<% if(data[0].grade_level == '{11th}') { %>
									<option value='11th' selected>11th</option>
								<% } else { %>
									<option value='11th'>11th</option>
								<% } %>
								<% if(data[0].grade_level == '{12th}') { %>
									<option value='12th' selected>12th</option>
								<% } else { %>
									<option value='12th'>12th</option>
								<% } %>
								<% if(data[0].grade_level == '{College Prep}') { %>
									<option value='College Prep' selected>College Prep</option>
								<% } else { %>
									<option value='College Prep'>College Prep</option>
								<% } %>
								<% if(data[0].grade_level == '{AP}') { %>
									<option value='AP' selected>AP</option>
								<% } else { %>
									<option value='AP'>AP</option>
								<% } %>
							</select>
						</div>
					</div>
					<div class="form-group row">
						<label for="inputPic" class="col-sm-2 col-form-label">Profile Picture</label>
						<div class="col-sm-10">
							<label class="custom-file">
								<input type="file" id="inputPic" class="custom-file-input" value="<%= data[0].picture %>" disabled>
								<span class="custom-file-control"></span>
							</label>
						</div>
					</div>
					<button class="btn btn-primary" type="button" id="update-btn">
						Update
					</button>
					<button class="btn btn-primary" type="button" id="reset-btn" style="display:none">
						Reset
					</button>
					<button class="btn btn-primary" type="button" id="save-btn" style="display:none">
						Save
					</button>
				</form>
			</div>
		</div>
		
		<script src="js/profile.js"></script>
	</body>
</html>

<!-- Modal -->
<div class="modal fade" id="approvalHardwareModal" role="dialog">
	<div class="modal-dialog">
	
		<!-- Modal content-->
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">&times;</button>
				<h4 class="modal-title">Hardware</h4>
			</div>
			<div class="modal-body">
				<form>
					<div class="form-group row">
						<label for="requestHardwareName" class="col-sm-2 col-form-label">Hardware Name</label>
						<div class="col-sm-10">
							<input type="text" class="form-control" id="requestHardwareName" placeholder="Hardware Name" required>
						</div>
					</div>
					<div class="form-group row">
						<label for="requestSerialNum" class="col-sm-2 col-form-label">Serial Number</label>
						<div class="col-sm-10">
							<input type="text" class="form-control" id="requestSerialNum" placeholder="Serial Number" required>
						</div>
					</div>
					<div class="form-group row">
						<label for="requestorName" class="col-sm-2 col-form-label">Requestor</label>
						<div class="col-sm-10">
							<input type="text" class="form-control" id="requestorName" placeholder="Name" required>
						</div>
					</div>
					<div class="form-group row">
						<label for="requestStart" class="col-sm-2 col-form-label">Start</label>
						<div class="col-sm-10">
							<input type="text" class="form-control" id="requestStart" placeholder="Start" required>
						</div>
					</div>
					<div class="form-group row">
						<label for="requestEnd" class="col-sm-2 col-form-label">End</label>
						<div class="col-sm-10">
							<input type="text" class="form-control" id="requestEnd" placeholder="End" required>
						</div>
					</div>
					<div class="decision-buttons">
						<button type="button" class="btn btn-success approve-btn" data-dismiss="modal">Accept</button>
						<button type="button" class="btn btn-danger decline-btn" data-dismiss="modal">Decline</button>
					</div>
				</form>
			</div>
		</div>
		
	</div>
</div>

<script src="../js/hardware_edit.js"></script>